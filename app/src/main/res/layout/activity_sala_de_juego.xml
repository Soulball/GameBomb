<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalaDeJuego">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blanco">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UNIRSE A UNA SALA"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blanco"
                android:background="@color/negro"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de sala"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="5dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blanco"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:background="@color/azul">
                </EditText>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blanco"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:background="@color/azul">
                </EditText>

            </LinearLayout>

            <Button
                android:id="@+id/but_unirse"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="CONFIRMAR"
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="@color/verdoso"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blanco">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CREAR A UNA SALA"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/blanco"
                android:background="@color/negro"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre (8 digitos)"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textColor="@color/negro"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="5dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blanco"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:background="@color/azul"/>


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blanco"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:background="@color/azul"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/but_crear"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:text="CONFIRMAR"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:background="@color/verdoso"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/but_iniciar"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:text="INICIAR"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:background="@color/rojo"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/azul">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/negro">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MIEBROS DE SALA"
                    android:textColor="@color/blanco"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIDER"
                    android:textColor="@color/blanco"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanco"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="1"
                    android:textSize="45dp"
                    android:textColor="@color/negro"
                    android:layout_marginHorizontal="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/negro"
                    android:src="@drawable/auto"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin nombre"
                    android:textSize="25dp"
                    android:textColor="@color/negro"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/numero"
                    android:layout_margin="5dp"/>

            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>