<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaJuego">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/verdoso"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@color/negro">

            <ImageView
                android:id="@+id/img_jugador_imagen2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription=""
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@color/blanco"
                android:src="@drawable/auto"/>

            <ImageView
                android:id="@+id/img_jugador_vida2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription=""
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/vida"/>

            <TextView
                android:id="@+id/txt_jugador_vida2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="100"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/img_jugador_cartas2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription=""
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/numero"/>

            <TextView
                android:id="@+id/txt_jugador_cartas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@color/verdoso">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/negro">

                <ImageView
                    android:id="@+id/img_jugador_imagen3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription=""
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@color/blanco"
                    android:src="@drawable/numero"/>

                <ImageView
                    android:id="@+id/img_jugador_vida3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/vida"/>

                <TextView
                    android:id="@+id/txt_jugador_vida3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="100"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/img_jugador_cartas3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/numero"/>

                <TextView
                    android:id="@+id/txt_jugador_cartas3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_tipo_turno"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription=""
                        android:layout_marginHorizontal="15dp"
                        android:src="@drawable/normal1"/>
                    <TextView
                        android:id="@+id/txt_damage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:layout_marginHorizontal="15dp"
                        android:textColor="@color/rojo"
                        android:textSize="30sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_cementerio"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="20dp"
                        android:contentDescription=""
                        android:src="@drawable/boca"/>

                    <ImageView
                        android:id="@+id/img_deck"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:contentDescription=""
                        android:layout_margin="20dp"
                        android:src="@color/blanco"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/negro">

                <ImageView
                    android:id="@+id/img_jugador_imagen4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription=""
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@color/blanco"
                    />

                <ImageView
                    android:id="@+id/img_jugador_vida4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@color/negro"/>

                <TextView
                    android:id="@+id/txt_jugador_vida4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/img_jugador_cartas4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@color/negro"/>

                <TextView
                    android:id="@+id/txt_jugador_cartas4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/negro">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img_jugador_imagen1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:contentDescription=""
                    android:background="@color/blanco"
                    android:src="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:id="@+id/img_jugador_vida1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/vida"/>

                <TextView
                    android:id="@+id/txt_jugador_vida1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="100"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_cartas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>